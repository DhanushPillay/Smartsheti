# SmartSheti Environment Variables
# Copy this file to .env and fill in your values

# data.gov.in API Key
# Get your API key from: https://data.gov.in/user/register
# If not set, a default public key will be used (rate limited)
DATA_GOV_IN_API_KEY=your_api_key_here

# OpenWeather API Key (for weather features)
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_key_here

# MyMemory Translation API (optional - has free tier)
# Get your API key from: https://mymemory.translated.net/doc/keygen.php
MYMEMORY_API_KEY=your_mymemory_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Server Ports
PRICE_API_PORT=5000
TRANSLATION_API_PORT=5001
